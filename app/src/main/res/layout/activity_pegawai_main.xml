<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.sugiartha.juniorandroid.components.DynamicAppBar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="90dp"
        android:text="Employee's name"
        android:fontFamily="@font/poppins_family"
        android:textColor="@color/gray"
        android:textFontWeight="500" />

    <EditText
        android:id="@+id/editTextName"
        android:fontFamily="@font/poppins_family"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="36dp"
        android:background="@drawable/form_edit"
        android:hint="name"
        android:paddingStart="20dp"
        android:paddingTop="4dp"
        android:textColor="@color/black"
        tools:ignore="RtlCompat,RtlSymmetry" />

    <TextView
        android:id="@+id/tv_name_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="4dp"
        android:text="* name must not be null"
        android:visibility="gone"
        android:textColor="@color/error" />

    <TextView
        android:id="@+id/tv_desg"
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_family"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Employment"
        android:textColor="@color/gray"
        android:textFontWeight="500" />

    <EditText
        android:id="@+id/editTextDesg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="36dp"
        android:fontFamily="@font/poppins_family"
        android:background="@drawable/form_edit"
        android:hint="employment"
        android:paddingStart="20dp"
        android:paddingTop="4dp"
        android:textColor="@color/black"
        tools:ignore="RtlCompat,RtlSymmetry" />

    <TextView
        android:id="@+id/tv_desg_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/poppins_family"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:text="* position must not be null"
        android:textColor="@color/error" />

    <TextView
        android:id="@+id/tv_salary"
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_family"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Salary"
        android:textColor="@color/gray"
        android:textFontWeight="500" />

    <EditText
        android:id="@+id/editTextSalary"
        android:layout_width="match_parent"
        android:fontFamily="@font/poppins_family"
        android:layout_height="50dp"
        android:layout_marginHorizontal="36dp"
        android:background="@drawable/form_edit"
        android:hint="salary"
        android:paddingStart="20dp"
        android:paddingTop="4dp"
        android:textColor="@color/black"
        tools:ignore="RtlCompat,RtlSymmetry" />

    <TextView
        android:id="@+id/tv_salary_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/poppins_family"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:text="* salary must not be null"
        android:textColor="@color/error" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:textFontWeight="500"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_family"
        android:background="@drawable/btn_gradient"
        android:text="Add"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_family"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/btn_white"
        android:text="View Employees" />


</LinearLayout>