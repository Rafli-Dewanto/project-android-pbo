<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PegawaiMainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/layered_waves" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Pegawai Main"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/poppins_semibold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Nama Pegawai"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/poppins_medium"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/editTextName"
                android:hint="Masukkan nama"
                android:paddingStart="10dp"
                android:background="@drawable/form_edit_rounded"
                android:fontFamily="@font/poppins_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textSize="20dp"
                android:text="Posisi"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/poppins_medium"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/editTextDesg"
                android:hint="Masukkan posisi"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="10dp"
                android:background="@drawable/form_edit_rounded"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Gaji"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/poppins_medium"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/editTextSalary"
                android:hint="Masukkan gaji"
                android:paddingStart="10dp"
                android:background="@drawable/form_edit_rounded"
                android:fontFamily="@font/poppins_regular"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_horizontal"
                android:paddingHorizontal="15dp"
                android:text="Tambah Pegawai"
                android:textColor="@color/colorBackground"
                android:id="@+id/buttonAdd"
                android:background="@drawable/btn_selector"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:paddingHorizontal="15dp"
                android:text="Daftar Pegawai"
                android:textColor="@color/colorBackground"
                android:background="@drawable/btn_selector"
                android:id="@+id/buttonView" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>