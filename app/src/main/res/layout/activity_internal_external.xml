<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InternalExternalActivity">


    <com.sugiartha.juniorandroid.components.DynamicAppBar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/textBaca"
        android:fontFamily="@font/poppins_family"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:inputType="textMultiLine"
        android:background="@drawable/form_edit"
        android:backgroundTint="@color/colorEditText"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="left|top"
        android:padding="10dp"
        android:hint="Hasil Baca File"/>

    <Button
        android:id="@+id/btnBuatFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_family"
        android:background="@drawable/btn_gradient"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        android:text="Buat File"/>

    <Button
        android:id="@+id/btnUbahFile"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_family"
        android:background="@drawable/btn_gradient"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="12dp"
        android:text="Ubah File"/>

    <Button
        android:id="@+id/btnBacaFile"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_family"
        android:background="@drawable/btn_gradient"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="12dp"
        android:text="Baca File"/>

    <Button
        android:id="@+id/btnHapusFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_family"
        android:background="@drawable/btn_gradient"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="12dp"
        android:text="Hapus File"/>

</LinearLayout>