<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KalkulatorActivity">

    <com.sugiartha.juniorandroid.components.DynamicAppBar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:fontFamily="@font/poppins_family"
                    android:textFontWeight="800"
                    android:textColor="@color/colorAccent"
                    android:text="Input Angka Pertama" />

                <com.google.android.material.textfield.TextInputEditText
                    android:textAlignment="center"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:inputType="number"
                    android:hint="Angka pertama"
                    android:background="@drawable/form_edit"
                    android:id="@+id/angka1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="+"
                    android:textColor="@color/colorAccent"
                    android:textSize="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_family"
                    android:textFontWeight="800"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:text="Input Angka Kedua"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:textAlignment="center"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:hint="Angka kedua"
                    android:background="@drawable/form_edit"
                    android:id="@+id/angka2"/>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:text="HITUNG"
                    android:textSize="22dp"
                    android:textColor="@color/colorBackground"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/btn_selector"
                    android:id="@+id/btnHitung"/>

                <TextView
                    android:id="@+id/txtHasil"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_family"
                    android:textFontWeight="800"
                    android:textSize="40dp"
                    android:text="Hasil"
                    android:textAlignment="center"
                    android:background="@drawable/form_edit"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>