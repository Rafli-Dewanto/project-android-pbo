<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PegawaiTampilActivity">

    <com.sugiartha.juniorandroid.components.DynamicAppBar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:text="ID Pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/poppins_family"
        android:textColor="@color/gray"
        android:textFontWeight="500"/>

    <EditText
        android:fontFamily="@font/poppins_family"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/form_edit"
        android:hint="id pegawai"
        android:paddingStart="20dp"
        android:paddingTop="4dp"
        android:textColor="@color/black"
        tools:ignore="RtlCompat,RtlSymmetry"
        android:id="@+id/editTextId" />

    <TextView
        android:text="Nama Pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_family"
        android:textColor="@color/gray"
        android:textFontWeight="500" />

    <EditText
        android:fontFamily="@font/poppins_family"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/form_edit"
        android:hint="nama pegawai"
        android:paddingStart="20dp"
        android:paddingTop="4dp"
        android:textColor="@color/black"
        tools:ignore="RtlCompat,RtlSymmetry"
        android:id="@+id/editTextName" />

    <TextView
        android:text="Posisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_family"
        android:textColor="@color/gray"
        android:textFontWeight="500" />

    <EditText
        android:fontFamily="@font/poppins_family"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/form_edit"
        android:hint="posisi"
        android:paddingStart="20dp"
        android:paddingTop="4dp"
        android:textColor="@color/black"
        tools:ignore="RtlCompat,RtlSymmetry"
        android:id="@+id/editTextDesg" />

    <TextView
        android:text="Nama Pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_family"
        android:textColor="@color/gray"
        android:textFontWeight="500" />

    <EditText
        android:fontFamily="@font/poppins_family"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/form_edit"
        android:hint="salary"
        android:paddingStart="20dp"
        android:paddingTop="4dp"
        android:textColor="@color/black"
        tools:ignore="RtlCompat,RtlSymmetry"
        android:id="@+id/editTextSalary" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_family"
        android:textColor="@color/white"
        android:background="@drawable/btn_gradient"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"
        android:id="@+id/buttonUpdate"
        android:text="Update Pegawai"/>

    <Button
        android:layout_width="match_parent"
        android:textColor="@color/white"

        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_family"
        android:background="@drawable/btn_gradient"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:text="Hapus Pegawai"
        android:id="@+id/buttonDelete" />

</LinearLayout>