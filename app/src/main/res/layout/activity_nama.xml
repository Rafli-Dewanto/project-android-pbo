<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NamaActivity">

    <com.sugiartha.juniorandroid.components.DynamicAppBar
        android:id="@+id/dynamic_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="80dp"
        android:fontFamily="@font/poppins_bold"
        android:paddingHorizontal="20dp"
        android:text="Data Peserta VSGA"
        android:textColor="@color/colorPrimary"
        android:textSize="34dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editNama"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/form_edit"
        android:fontFamily="@font/poppins_regular"
        android:hint="Nama Peserta"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="1.5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/blueish_gray" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:text="* Name must not be null"
        android:textColor="@color/error"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_selector"
        android:fontFamily="@font/poppins_medium"
        android:text="OK"
        android:textColor="#fff" />

    <LinearLayout
        android:id="@+id/ll_banner"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/banner"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/vector_info" />

        <TextView
            android:id="@+id/txtHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="115dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/vector_close" />

    </LinearLayout>


</LinearLayout>